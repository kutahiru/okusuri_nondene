<%= turbo_frame_tag reward_condition do %>
<div>
  <div class="mt-2 bg-teal-100 rounded-3xl">
    <div class="mx-6 py-4">
      <h1 class="text-xl font-semibold text-dark-65">
        <%= reward_condition.reward_name %>
      </h1>

      <div class="mt-2 ml-2 text-dark-65">
        <div> ご褒美条件
        </div>
        <div class="ml-4">
          <%= RewardCondition.human_attribute_name("condition_type.#{reward_condition.condition_type}") %>
        </div>
      </div>

      <div class="mt-2 ml-2 text-dark-65">
        <div>曜日</div>
        <div class="ml-4">
          <%= RewardCondition.human_attribute_name("target_weekday.#{reward_condition.target_weekday}") %>
        </div>
      </div>

      <div class="mt-2 ml-2 text-dark-65">
        <div> 連続日数</div>
        <div class="ml-4">
          <%= reward_condition.target_value %>日間
        </div>
      </div>

      <div class="flex items-center mt-4 gap-2 justify-end">
        <div>
          <%= link_to "編集",
          edit_reward_condition_path(reward_condition.id),
          class: "px-4 py-2 bg-sage-500 rounded-lg hover:bg-sage-600 transition-colors",
          data: { turbo_frame: "modal" } %>
        </div>
        <div>
          <%= link_to "削除",
          reward_condition_path(reward_condition.id),
          method: :delete,
          class: "px-4 py-2 bg-beige-500 rounded-lg hover:bg-beige-600 transition-colors",
          data: {
            turbo_method: :delete,
            turbo_confirm: "本当に#{reward_condition.reward_name}を削除しますか？"
          }
          %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>