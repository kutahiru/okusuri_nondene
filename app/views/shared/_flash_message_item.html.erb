<div data-controller="flash" data-flash-auto-hide-value="true" data-flash-hide-delay-value="5000" class="container mx-auto px-6" data-turbo-temporary>
  <div style="display: block;">
    <%
      config = case message_type.to_s
      when 'success'
        {
          bg_gradient: 'bg-gradient-to-r from-teal-500 to-teal-600',
          bg_light: 'bg-gradient-to-r from-teal-50 to-teal-100',
          text_color: 'text-teal-800',
          border_color: 'border-teal-200',
          title: '成功',
          icon: 'M5 13l4 4L19 7'
        }
      when 'error'
        {
          bg_gradient: 'bg-gradient-to-r from-red-500 to-red-600',
          bg_light: 'bg-gradient-to-r from-red-50 to-red-100',
          text_color: 'text-red-800',
          border_color: 'border-red-200',
          title: 'エラー',
          icon: 'M6 18L18 6M6 6l12 12'
        }
      when 'warning'
        {
          bg_gradient: 'bg-gradient-to-r from-yellow-500 to-yellow-600',
          bg_light: 'bg-gradient-to-r from-yellow-50 to-yellow-100',
          text_color: 'text-yellow-800',
          border_color: 'border-yellow-200',
          title: '警告',
          icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'
        }
      else
        {
          bg_gradient: 'bg-gradient-to-r from-blue-500 to-blue-600',
          bg_light: 'bg-gradient-to-r from-blue-50 to-blue-100',
          text_color: 'text-blue-800',
          border_color: 'border-blue-200',
          title: '情報',
          icon: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
        }
      end
    %>

    <div class="my-4">
      <div class="flex items-start space-x-4 p-4 <%= config[:bg_light] %> border <%= config[:border_color] %> rounded-2xl shadow-sm hover:shadow-md transition-all duration-200 max-w-md">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-10 h-10 <%= config[:bg_gradient] %> rounded-full shadow-lg">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= config[:icon] %>"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1 min-w-0">
          <div class="flex items-center justify-between">
            <h4 class="text-sm font-semibold <%= config[:text_color] %> mb-1"><%= config[:title] %></h4>
            <button data-action="click->flash#hide" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed"><%= message %></p>
        </div>
      </div>
    </div>
  </div>
</div>