<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm border-b border-gray-100">
  <nav data-controller="mobile-menu">
    <div class="container px-6 py-4 mx-auto lg:flex lg:justify-between lg:items-center">
      <div class="flex items-center justify-between">
        <!-- ロゴやブランド名 -->
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-gradient-to-r from-teal-400 to-teal-500 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 008 10.172V5L8 4z"></path>
            </svg>
          </div>
          <%= link_to root_path, class: "text-xl font-bold text-gray-800 hover:text-teal-600 transition-colors" do %>
            おくすり飲んでね
          <% end %>
        </div>
        
        <!-- ハンバーガーメニューボタン（モバイル用） -->
        <div class="flex lg:hidden">
          <button 
            data-action="click->mobile-menu#toggle"
            data-mobile-menu-target="button"
            type="button" 
            class="p-2 text-gray-500 hover:text-gray-600 hover:bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transition-all duration-200" 
            aria-label="メニューを開く"
          >
            <svg data-mobile-menu-target="openIcon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 8h16M4 16h16" />
            </svg>
            <svg data-mobile-menu-target="closeIcon" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- ナビゲーションメニュー -->
      <div 
        data-mobile-menu-target="menu"
        class="hidden absolute inset-x-0 z-20 w-full px-6 py-4 mt-2 bg-white border border-gray-200 rounded-xl shadow-xl lg:bg-transparent lg:border-none lg:shadow-none lg:mt-0 lg:p-0 lg:top-0 lg:relative lg:w-auto lg:block lg:opacity-100"
      >
        <div class="flex flex-col space-y-2 lg:flex-row lg:items-center lg:space-y-0 lg:space-x-6">
          <%= link_to root_path, 
            class: "flex items-center px-3 py-2 font-medium text-gray-700 rounded-lg hover:text-teal-600 hover:bg-teal-50 lg:hover:bg-transparent lg:px-3 lg:py-2 transition-all duration-200",
            data: { action: "click->mobile-menu#closeOnMobile" } do %>
            <svg class="w-4 h-4 mr-2 lg:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            ホーム
          <% end %>

          <%= link_to medication_groups_path,
            class: "flex items-center px-3 py-2 font-medium text-gray-700 rounded-lg hover:text-teal-600 hover:bg-teal-50 lg:hover:bg-transparent lg:px-3 lg:py-2 transition-all duration-200",
            data: { action: "click->mobile-menu#closeOnMobile" } do %>
            <svg class="w-4 h-4 mr-2 lg:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            グループ
          <% end %>

          <% if current_user.present? %>
            <%= link_to mypage_path,
              class: "flex items-center px-3 py-2 font-medium text-gray-700 rounded-lg hover:text-teal-600 hover:bg-teal-50 lg:hover:bg-transparent lg:px-3 lg:py-2 transition-all duration-200",
              data: { action: "click->mobile-menu#closeOnMobile" } do %>
              <svg class="w-4 h-4 mr-2 lg:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              マイページ
            <% end %>
            <%= button_to logout_path,
              method: :delete,
              class: "flex items-center w-full text-left px-3 py-2 font-medium text-gray-700 rounded-lg hover:text-red-600 hover:bg-red-50 lg:hover:bg-transparent lg:px-3 lg:py-2 lg:w-auto transition-all duration-200",
              data: { action: "click->mobile-menu#closeOnMobile" } do %>
              <svg class="w-4 h-4 mr-2 lg:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              ログアウト
            <% end %>
          <% else %>
            <%= button_to user_line_omniauth_authorize_path,
              method: :post,
              class: "flex items-center w-full text-left px-4 py-2 font-medium text-white bg-gradient-to-r from-teal-500 to-teal-600 rounded-lg hover:from-teal-600 hover:to-teal-700 shadow-sm hover:shadow-md lg:px-4 lg:py-2 lg:w-auto transition-all duration-200",
              data: { turbo: false, action: "click->mobile-menu#closeOnMobile" } do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
              </svg>
              ログイン
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>