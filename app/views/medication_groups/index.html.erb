<section class="container px-2 md:px-6 mx-auto my-4 relative">
  <%= image_tag 'heart_pink.png', class: 'absolute top-50 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 opacity-40 -z-10' %>
  <h2 class="md:px-6 mt-2 text-4xl font-bold text-dark-65">グループ一覧</h2>

  <div class="md:px-6 py-2 mx-auto my-4">
    <div id="medication_groups" class="grid grid-cols-1 gap-8 lg:grid-cols-2 xl:grid-cols-3">
      <% if @medication_groups.present? %>
        <%= render @medication_groups %>
      <% end %>
    </div>

    <div class="pt-6">
      <%= link_to new_medication_group_path,
        class: "group inline-flex items-center justify-center w-full md:w-auto px-8 py-4 bg-gradient-to-r from-teal-500 to-teal-600 text-white font-semibold rounded-xl hover:from-teal-600 hover:to-teal-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl",
        data: { turbo_frame: "modal" } do %>
        <svg class="w-5 h-5 mr-2 group-hover:rotate-90 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        グループ追加
      <% end %>
    </div>

    <div class="py-4">
      <% if @medication_groups.empty? %>
        <div class="col-span-full text-center md:text-left">
          <div class="animate-bounce inline-block md:pl-19">
            <svg class="w-8 h-8 text-coral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-700 mb-2">まずはグループを登録してください</h3>
        </div>
      <% end %>
    </div>
  </div>
</section>