<%= turbo_frame_tag medication_group do %>
<div class="group">
<%= link_to medication_group_path(medication_group.id),
  data: { turbo_frame: "_top" } do %>
  <div class="relative overflow-hidden bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg hover:border-gray-200 transition-all duration-300 group-hover:scale-[1.02]">
    <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-teal-400/20 to-teal-500/20 rounded-bl-full"></div>
    <div class="p-6">
      <div class="flex items-start justify-between mb-4 relative">
        <h2 class="text-xl font-bold text-gray-800 group-hover:text-teal-600 transition-colors">
          <%= medication_group.group_name %>
        </h2>
        <div class="absolute -right-1 top-0">
          <svg class="w-7 h-7 text-gray-400 group-hover:text-gray-500 transition-colors animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="animation-duration: 16s;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
      </div>

      <div class="space-y-3 mb-4">
        <% medication_group.medication_group_users.order(user_type: :desc).each do |group_user| %>
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 p-4">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-gradient-to-r from-teal-500 to-teal-600 rounded-full flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-800">
                <%= group_user.user.user_name %>
              </h3>
            </div>
            <div class="flex justify-end sm:justify-start">
              <span class="inline-block px-3 py-1 text-sm font-medium text-teal-700 bg-teal-50 rounded-full border border-teal-200">
                <%= group_user.user_type_i18n %>
              </span>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col sm:flex-row items-center gap-3 sm:justify-start">
        <div class="relative btn-group w-full md:w-auto">
          <%= link_to medication_group_medication_managements_path(medication_group.id),
          class: "inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg transition-all duration-200 hover:shadow-sm",
          data: { turbo_frame: "_top" } do %>
            <svg class="w-4 h-4 mr-2 btn-group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            履歴
          <% end %>
          <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 text-xs text-white bg-gray-900 rounded opacity-0 btn-group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
              履歴を参照します
          </div>
        </div>
        <div class="relative btn-group w-full md:w-auto">
          <%= link_to edit_medication_group_path(medication_group.id),
          class: "inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-teal-700 bg-teal-50 hover:bg-teal-100 border border-teal-200 rounded-lg transition-all duration-200 hover:shadow-sm",
          data: { turbo_frame: "modal" } do %>
            <svg class="w-4 h-4 mr-2 btn-group-hover:rotate-12 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            編集
          <% end %>
          <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 text-xs text-white bg-gray-900 rounded opacity-0 btn-group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
              グループ名を編集します
          </div>
        </div>
        <div class="relative btn-group w-full md:w-auto">
          <%= link_to medication_group_path(medication_group.id),
            method: :delete,
            class: "inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 border border-red-200 rounded-lg transition-all duration-200 hover:shadow-sm",
            data: {
              turbo_method: :delete,
              turbo_confirm: "本当に#{medication_group.group_name}を削除しますか？"
            } do %>
            <svg class="w-4 h-4 mr-2 btn-group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            削除
          <% end %>
          <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 text-xs text-white bg-gray-900 rounded opacity-0 btn-group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
              グループ名を削除します
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
<% end %>