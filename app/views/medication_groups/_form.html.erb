<%= form_with(model: medication_group, local: false,
  data: { action: "turbo:submit-end->modal#close" }
  ) do |form| %>

  <%# グループ名 %>
  <div class="mb-4">
    <%= form.label :group_name, "グループ名", class: "block text-md font-medium text-gray-700 mb-2" %>
    <%= form.text_field :group_name, class: "mt-1 block md:w-1/2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 font-semibold text-lg" %>
    <%# エラーメッセージ表示 %>
    <% if medication_group.errors[:group_name].any? %>
      <div class="mt-1 text-sm text-red-600">
        <%= medication_group.errors[:group_name].first %>
      </div>
    <% end %>
  </div>

  <%# 送信ボタン %>
  <div class="flex justify-end space-x-3 pt-4">

    <%# 送信ボタン %>
    <%= form.submit medication_group.persisted? ? "更新" : "作成",
        class: "px-4 py-2 text-sm font-medium text-gray-700 bg-sage-500 border border-transparent rounded-md hover:bg-sage-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>

    <%# キャンセルボタン %>
    <button type="button"
            data-action="click->modal#hide"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
      キャンセル
    </button>
  </div>
<% end %>