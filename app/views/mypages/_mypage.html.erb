<%= turbo_frame_tag user do %>
<div class="group">
  <div class="relative overflow-hidden bg-white rounded-2xl shadow-sm border border-gray-100 transition-all duration-300">
    <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-teal-400/20 to-teal-500/20 rounded-bl-full"></div>
    <div class="p-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
          <div class="w-16 h-16 bg-gradient-to-r from-teal-400 to-teal-500 rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-800 transition-colors">
              <%= user.user_name %>
            </h1>
          </div>
        </div>
      </div>

      <div class="flex justify-start">
        <div class="relative btn-group w-full sm:w-auto">
          <%= link_to edit_mypage_path,
            class: "inline-flex items-center justify-center w-full sm:w-auto px-6 py-3 text-sm font-medium text-teal-700 bg-teal-50 hover:bg-teal-100 border border-teal-200 rounded-lg transition-all duration-200 hover:shadow-sm group",
            data: { turbo_frame: "modal" } do %>
            <svg class="w-4 h-4 mr-2 group-hover:rotate-12 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            編集
          <% end %>
          <div class="tooltip-base">
            名前を編集します
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>