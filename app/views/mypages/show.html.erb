<section class="container px-6 mx-auto my-4 relative">
  <%= image_tag 'heart_pink.png', class: 'absolute top-50 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 opacity-40 -z-10' %>
  <h2 class="px-6 mt-2 text-4xl font-bold text-dark-65">マイページ</h2>

  <div id="mypage" class="ml-4 pt-2 my-4 grid grid-cols-1 gap-x-4 gap-y-2 md:grid-cols-2 xl:grid-cols-3">
