<%= turbo_frame_tag "schedule_add_button" do %>
  <% if medication_schedules.count >= MedicationSchedule::MAX_MEDICATION_SCHEDULE %>
    <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-gray-100 border border-gray-200 rounded-lg cursor-not-allowed opacity-75">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728A9 9 0 015.636 5.636"></path>
      </svg>
      スケジュール追加（上限：<%= MedicationSchedule::MAX_MEDICATION_SCHEDULE %>個）
    </div>
  <% else %>
    <%= link_to new_medication_group_medication_schedule_path(medication_group),
      class: "inline-flex items-center px-4 py-2 text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg transition-all duration-200 hover:shadow-sm",
      data: { turbo_frame: "modal", turbo_prefetch: "false" } do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      スケジュール追加
    <% end %>
  <% end %>
<% end %>