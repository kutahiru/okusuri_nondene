<div class="mt-2 px-2 py-2 bg-teal-100 rounded-lg text-dark-65">
  <%= day_info[:display] %>
  <% day_medications.each do |medication| %>
    <div class="pl-2">
      <%= medication.original_schedule_title %>
      <% if medication.medication_taken? %>
        <span>飲んだよ</span>
      <% else %>
        <span class="font-semibold">飲めてない</span>
      <% end %>
    </div>
  <% end %>
</div>